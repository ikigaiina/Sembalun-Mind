# 🔧 SEMBALUN MIND - Environment Variables Template
# Copy this file to .env.local for local development
# Copy this file to .env.production for production builds

# ========================================
# APP CONFIGURATION
# ========================================
VITE_APP_NAME="Sembalun Mind"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Indonesian Meditation App with Cultural Wisdom"

# API Configuration (if needed for future features)
VITE_API_BASE_URL="https://api.sembalun.app"
VITE_API_TIMEOUT=10000

# Indonesian Cultural Context
VITE_APP_LOCALE=id-ID
VITE_APP_TIMEZONE=Asia/Jakarta
VITE_APP_CURRENCY=IDR

# PWA Configuration - Updated Branding
VITE_PWA_THEME_COLOR="#6A8F6F"
VITE_PWA_BACKGROUND_COLOR="#E1E8F0"

# ========================================
# SUPABASE CONFIGURATION - COMPREHENSIVE SETUP
# ========================================
# Get these values from your Supabase project dashboard:
# 1. Go to https://supabase.com/dashboard
# 2. Select your project (recommend: sembalun-mind)
# 3. Go to Settings > API
# 4. Copy the values below

# Your project URL (format: https://your-project-ref.supabase.co)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co

# Your project anon/public key (starts with eyJ...)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Your service role key (for server-side operations only - keep secret!)
# ⚠️ NEVER expose this in client-side code
VITE_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database URL for direct connections (optional)
DATABASE_URL=postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres

# ========================================
# SUPABASE STORAGE BUCKETS
# ========================================
# Storage bucket names (matching storage-configuration.sql)
VITE_SUPABASE_BUCKET_AVATARS=avatars
VITE_SUPABASE_BUCKET_AUDIO=audio
VITE_SUPABASE_BUCKET_JOURNAL_AUDIO=journal-audio
VITE_SUPABASE_BUCKET_COURSE_MEDIA=course-media
VITE_SUPABASE_BUCKET_CULTURAL_MEDIA=cultural-media
VITE_SUPABASE_BUCKET_USER_CONTENT=user-content

# ========================================
# SUPABASE REALTIME CONFIGURATION
# ========================================
# Enable realtime subscriptions for live features
VITE_SUPABASE_REALTIME_ENABLED=true
VITE_SUPABASE_REALTIME_CHANNELS=user_activity,achievements,community,notifications

# ========================================
# FEATURE FLAGS - ENHANCED
# ========================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_AUTH=true

# New Features
VITE_ENABLE_PREMIUM_FEATURES=true
VITE_ENABLE_COMMUNITY_FEATURES=true
VITE_ENABLE_CULTURAL_FEATURES=true
VITE_ENABLE_VOICE_RECORDING=true
VITE_ENABLE_MOOD_TRACKING=true
VITE_ENABLE_ACHIEVEMENT_SYSTEM=true

# ========================================
# ANALYTICS & MONITORING
# ========================================
# External Analytics (optional)
VITE_ANALYTICS_ID=""
VITE_GTM_ID=""

# Internal Analytics
VITE_USER_ANALYTICS=true
VITE_PERFORMANCE_MONITORING=true
VITE_ERROR_TRACKING=true

# ========================================
# SECURITY & PRIVACY
# ========================================
# Row Level Security enforcement
VITE_RLS_ENABLED=true
VITE_DATA_ENCRYPTION=true
VITE_GDPR_COMPLIANCE=true

# ========================================
# PAYMENT INTEGRATION (Optional)
# ========================================
# Stripe for premium subscriptions
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...

# Indonesian payment methods
VITE_PAYMENT_METHODS=bank_transfer,e_wallet,credit_card

# ========================================
# BUILD ENVIRONMENT
# ========================================
NODE_ENV=production
VITE_BUILD_TIMESTAMP=
VITE_DEV_MODE=false
VITE_DEBUG_LOGGING=false

# ========================================
# CULTURAL CONFIGURATION
# ========================================
# Indonesian cultural features
VITE_INDONESIAN_CULTURE=true
VITE_REGIONAL_ADAPTATION=javanese,balinese,sundanese
VITE_RELIGIOUS_CONTEXT=islamic,hindu,buddhist
VITE_TRADITIONAL_WISDOM=true

# ========================================
# QUICK SETUP CHECKLIST
# ========================================
# ✅ 1. Create Supabase project: https://supabase.com
# ✅ 2. Run supabase/complete-schema.sql in SQL Editor  
# ✅ 3. Run supabase/storage-configuration.sql
# ✅ 4. Run supabase/realtime-configuration.sql
# ✅ 5. Get URL & anon key from Settings > API
# ✅ 6. Update VITE_SUPABASE_URL and VITE_SUPABASE_ANON_KEY
# ✅ 7. Copy this file to .env.local
# ✅ 8. Test with: npm run test:supabase
# ✅ 9. Deploy and monitor in Supabase Dashboard

# Ready for comprehensive Supabase integration! 🚀