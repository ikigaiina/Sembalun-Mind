{
  "name": "sembalun-mind",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:with-check": "tsc -b && vite build",
    "build:fast": "vite build --config vite.config.production.ts --mode production",
    "build:minimal": "vite build --config vite.config.minimal.ts --mode production",
    "build:prod": "npm run clean && npm run build",
    "build:analyze": "vite build --mode production && npm run open:stats",
    "open:stats": "open-cli dist/stats.html",
    "build:quick": "vite build --mode development",
    "analyze": "npm run open:stats",
    "analyze:fast": "echo 'Opening bundle analyzer...' && npm run open:stats || echo 'Run npm run build first to generate stats.html'",
    "build:size": "npm run build && du -sh dist/assets/*.js | sort -hr",
    "lint": "eslint . --max-warnings 50",
    "lint:fix": "eslint . --fix --max-warnings 50",
    "lint:production": "eslint . --quiet",
    "preview": "vite preview",
    "serve": "vite preview --host",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "test": "vitest",
    "build:vercel": "npm run typecheck:loose && npm run build:deploy",
    "build:deploy": "vite build --config vite.config.deploy.ts --mode production",
    "build:no-hoist": "vite build --config vite.config.no-hoist.ts --mode production",
    "build:debug": "vite build --config vite.config.no-hoist.ts --mode production",
    "typecheck:loose": "tsc --noEmit --skipLibCheck || echo 'TypeScript warnings ignored for deployment'",
    "start": "vite preview --port $PORT --host 0.0.0.0",
    "postbuild": "echo 'Build completed successfully for Vercel deployment'",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:supabase": "tsx src/scripts/quickSupabaseTest.ts",
    "prepare:production": "npm run clean && npm run typecheck && npm run build",
    "deploy:netlify": "npm run build:fast && netlify deploy --prod --dir=dist",
    "deploy:vercel": "npm run prepare:production && vercel --prod",
    "test:build": "npm run build && npm run preview",
    "reset-achievements": "tsx src/scripts/resetAchievements.ts",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:accessibility": "axe --tags wcag2a,wcag2aa,wcag21aa http://localhost:4173",
    "test:smoke": "playwright test tests/smoke/",
    "test:production-health": "playwright test tests/health/",
    "build:enterprise": "npm run clean && npm run typecheck && npm run build:fast",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "performance:lighthouse": "lighthouse http://localhost:4173 --output html --output-path ./lighthouse-report.html",
    "performance:bundle-analyzer": "npm run build:analyze",
    "docker:build": "docker build -t sembalun-mind .",
    "docker:run": "docker run -p 3000:3000 sembalun-mind"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "@types/recharts": "^1.8.29",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.536.0",
    "polished": "^4.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1",
    "recharts": "^3.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "intersection-observer": "^0.12.2",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "open-cli": "^8.0.0",
    "playwright": "^1.54.2",
    "postcss": "^8.5.6",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-plugin-pwa": "^1.0.2",
    "vitest": "^3.2.4"
  }
}
